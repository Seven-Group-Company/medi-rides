# Copy this file to `.env` and replace the placeholder values with your own.

# Database
# Example: postgresql://username:password@host:port/dbname
DATABASE_URL=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=7d

# OAuth (Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:1000/auth/google/callback

# App URLs
APP_URL=http://localhost:1000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:1000
NODE_ENV=development
BCRYPT_SALT_ROUNDS=12

# Email (choose one provider)
# SMTP settings (example)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASS=
EMAIL_FROM_ADDRESS=

# Or use Resend (comment out SMTP if using Resend)
# RESEND_API_KEY=

# Admin contact
ADMIN_EMAIL=

# Session / other secrets
SESSION_SECRET=

# Cloudinary (file uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional 3rd party keys
GOOGLE_MAPS_API_KEY=

# Notes:
# - Never commit `.env` to source control. Use `.env.example` as the template.
# - In production, set these values securely (secrets manager, environment variables in the host, or CI/CD secrets store).
